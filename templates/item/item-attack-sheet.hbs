<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="attributes">Attributes</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      {{!-- Editors must receive enriched text data from getData to properly handle rolls --}}
      {{editor enrichedDescription target="system.description" engine="prosemirror" button=true editable=editable}}
    </div>

    {{!-- Attributes Tab --}}
    <div class="tab attributes" data-group="primary" data-tab="attributes">

      <div class="resources grid grid-2col">

        {{!-- "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. --}}
        <div class="resource flex-group-center">
          <label for="system.bonus" class="resource-label">Bonus</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.bonus" value="{{showSign system.bonus}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.damage_roll" class="resource-label">Damage</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.damage_roll" value="{{system.damage_roll}}" data-dtype="String"/>
          </div>
        </div>

        <div class="resource flex-group-center"></div>

        <div class="resource flex-group-center">
          <label for="system.damage_type" class="resource-label">Damage Type</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.damage_type" value="{{system.damage_type}}" data-dtype="String"/>
          </div>
        </div>
      </div>

    </div>
  </section>

</form>
